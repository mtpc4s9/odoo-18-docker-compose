<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ==================================================== -->
        <!-- 1. SEARCH VIEW                                       -->
        <!-- ==================================================== -->
        <record id="view_ld_room_search" model="ir.ui.view">
            <field name="name">ld.room.search</field>
            <field name="model">ld.room</field>
            <field name="arch" type="xml">
                <search string="Search Rooms">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="manager_id"/>
                    
                    <filter string="Physical Rooms" name="physical" domain="[('room_type', '=', 'physical')]"/>
                    <filter string="Virtual" name="virtual" domain="[('room_type', '=', 'virtual')]"/>
                    <separator/>
                    <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>

                    <group expand="0" string="Group By">
                        <filter string="Type" name="group_type" context="{'group_by': 'room_type'}"/>
                        <filter string="Manager" name="group_manager" context="{'group_by': 'manager_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- ==================================================== -->
        <!-- 2. LIST VIEW                                         -->
        <!-- ==================================================== -->
        <record id="view_ld_room_list" model="ir.ui.view">
            <field name="name">ld.room.list</field>
            <field name="model">ld.room</field>
            <field name="priority">10</field> <!-- CORRECT: Priority defined as a field -->
            <field name="arch" type="xml">
                <list string="Training Rooms" 
                      decoration-muted="active == False">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="room_type"/>
                    <field name="capacity"/>
                    <field name="address" optional="show"/>
                    <field name="access_url" widget="url" optional="hide"/>
                    <field name="manager_id" widget="many2one_avatar_user" optional="hide"/>
                    <field name="active" column_invisible="True"/>
                </list>
            </field>
        </record>

        <!-- ==================================================== -->
        <!-- 3. FORM VIEW                                         -->
        <!-- ==================================================== -->
        <record id="view_ld_room_form" model="ir.ui.view">
            <field name="name">ld.room.form</field>
            <field name="model">ld.room</field>
            <field name="arch" type="xml">
                <form string="Training Room">
                    <sheet>
                        <!-- Archive Ribbon -->
                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>

                        <!-- Smart Button: Sessions History -->
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_sessions" 
                                    type="object" 
                                    class="oe_stat_button" 
                                    icon="fa-calendar">
                                <field name="session_count" widget="statinfo" string="Sessions"/>
                            </button>
                        </div>

                        <!-- Title Section -->
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="e.g. Main Conference Hall"/>
                            </h1>
                            <h3>
                                <field name="code" placeholder="Code (e.g. RM-001)"/>
                            </h3>
                        </div>

                        <group>
                            <group string="Basic Info">
                                <field name="room_type" widget="radio" options="{'horizontal': true}"/>
                                <field name="capacity"/>
                                <field name="cost_per_hour" widget="monetary"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="active" invisible="1"/>
                            </group>
                            
                            <group string="Logistics">
                                <!-- Logic: Address visible only for physical rooms -->
                                <field name="address" 
                                       invisible="room_type == 'virtual'"
                                       required="room_type == 'physical'"/>
                                
                                <!-- Logic: URL visible only for virtual rooms -->
                                <field name="access_url" widget="url" 
                                       invisible="room_type != 'virtual'"
                                       required="room_type == 'virtual'"/>
                                
                                <field name="seating_style" invisible="room_type == 'virtual'"/>
                                <field name="is_video_conf"/>
                                <field name="manager_id"/>
                            </group>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- ==================================================== -->
        <!-- 4. ACTION                                            -->
        <!-- ==================================================== -->
        <record id="action_ld_room" model="ir.actions.act_window">
            <field name="name">Training Rooms</field>
            <field name="res_model">ld.room</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first training location!
                </p>
                <p>
                    Manage physical rooms, external venues, or virtual meeting links here.
                </p>
            </field>
        </record>

    </data>
</odoo>