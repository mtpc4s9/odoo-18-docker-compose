<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ==================================================== -->
        <!-- 1. SEARCH VIEW                                       -->
        <!-- ==================================================== -->
        <record id="view_ld_room_search" model="ir.ui.view">
            <field name="name">ld.room.search</field>
            <field name="model">ld.room</field>
            <field name="arch" type="xml">
                <search string="Search Rooms">
                    <field name="name"/>
                    <field name="address"/>
                </search>
            </field>
        </record>

        <!-- ==================================================== -->
        <!-- 2. LIST VIEW                                         -->
        <!-- ==================================================== -->
        <record id="view_ld_room_list" model="ir.ui.view">
            <field name="name">ld.room.list</field>
            <field name="model">ld.room</field>
            <field name="arch" type="xml">
                <list string="Training Rooms" editable="bottom">
                    <field name="name"/>
                    <field name="capacity"/>
                    <field name="address"/>
                </list>
            </field>
        </record>

        <!-- ==================================================== -->
        <!-- 3. FORM VIEW                                         -->
        <!-- ==================================================== -->
        <record id="view_ld_room_form" model="ir.ui.view">
            <field name="name">ld.room.form</field>
            <field name="model">ld.room</field>
            <field name="arch" type="xml">
                <form string="Training Room">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="e.g. Meeting Room A (3F)"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="capacity"/>
                            </group>
                            <group>
                                <field name="address" placeholder="Building/Floor or URL"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ==================================================== -->
        <!-- 4. ACTION                                            -->
        <!-- ==================================================== -->
        <record id="action_ld_room" model="ir.actions.act_window">
            <field name="name">Training Rooms</field>
            <field name="res_model">ld.room</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Define training locations to manage capacity and booking.
                </p>
            </field>
        </record>

    </data>
</odoo>