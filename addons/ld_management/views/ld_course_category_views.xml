<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ==================================================== -->
        <!-- 1. SEARCH VIEW                                       -->
        <!-- ==================================================== -->
        <record id="view_ld_course_category_search" model="ir.ui.view">
            <field name="name">ld.course.category.search</field>
            <field name="model">ld.course.category</field>
            <field name="arch" type="xml">
                <search string="Search Categories">
                    <field name="name"/>
                    <field name="parent_id"/>
                    <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Parent Category" name="group_parent" context="{'group_by': 'parent_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- ==================================================== -->
        <!-- 2. LIST VIEW (HIERARCHY)                             -->
        <!-- ==================================================== -->
        <record id="view_ld_course_category_list" model="ir.ui.view">
            <field name="name">ld.course.category.list</field>
            <field name="model">ld.course.category</field>
            <field name="arch" type="xml">
                <list string="Course Categories" priority="10">
                    <field name="sequence" widget="handle"/>
                    <field name="complete_name" string="Category Name"/>
                    <field name="course_count" optional="show"/>
                </list>
            </field>
        </record>

        <!-- ==================================================== -->
        <!-- 3. FORM VIEW                                         -->
        <!-- ==================================================== -->
        <record id="view_ld_course_category_form" model="ir.ui.view">
            <field name="name">ld.course.category.form</field>
            <field name="model">ld.course.category</field>
            <field name="arch" type="xml">
                <form string="Course Category">
                    <sheet>
                        <!-- Smart Button to view related courses -->
                        <div class="oe_button_box" name="button_box">
                            <button name="%(action_ld_course)d" 
                                    type="action" 
                                    class="oe_stat_button" 
                                    icon="fa-book"
                                    context="{'search_default_category_id': id, 'default_category_id': id}">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value"><field name="course_count"/></span>
                                    <span class="o_stat_text">Courses</span>
                                </div>
                            </button>
                        </div>

                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="e.g. Technical Skills"/></h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="parent_id"/>
                            </group>
                            <group>
                                <field name="sequence"/>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ==================================================== -->
        <!-- 4. ACTION                                            -->
        <!-- ==================================================== -->
        <record id="action_ld_course_category" model="ir.actions.act_window">
            <field name="name">Course Categories</field>
            <field name="res_model">ld.course.category</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new course category to organize your catalog.
                </p>
            </field>
        </record>

    </data>
</odoo>