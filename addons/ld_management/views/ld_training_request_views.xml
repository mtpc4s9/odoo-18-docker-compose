<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ==================================================== -->
        <!-- 1. SEARCH VIEW                                       -->
        <!-- Allows filtering and grouping requests.              -->
        <!-- ==================================================== -->
        <record id="view_ld_training_request_search" model="ir.ui.view">
            <field name="name">ld.training.request.search</field>
            <field name="model">ld.training.request</field>
            <field name="arch" type="xml">
                <search string="Search Training Requests">
                    <!-- Search Fields -->
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="course_id"/>
                    <field name="department_id"/>

                    <!-- Filters -->
                    <filter string="My Requests" name="filter_my_requests" domain="[('employee_id.user_id', '=', uid)]"/>
                    <separator/>
                    <filter string="To Approve" name="filter_to_approve" domain="[('state', '=', 'submitted')]"/>
                    <filter string="Approved" name="filter_approved" domain="[('state', '=', 'approved')]"/>
                    <filter string="Enrolled" name="filter_enrolled" domain="[('state', '=', 'done')]"/>
                    <separator/>
                    <filter string="Waitlisted" name="filter_waitlisted" domain="[('state', '=', 'waitlist')]"/>
                    <separator/>
                    <filter string="Archived" name="filter_archived" domain="[('active', '=', False)]"/>

                    <!-- Group By -->
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Course" name="group_course" context="{'group_by': 'course_id'}"/>
                        <filter string="Department" name="group_department" context="{'group_by': 'department_id'}"/>
                        <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- ==================================================== -->
        <!-- 2. LIST VIEW (Tree View)                             -->
        <!-- Overview of requests with color coding.              -->
        <!-- ==================================================== -->
        <record id="view_ld_training_request_list" model="ir.ui.view">
            <field name="name">ld.training.request.list</field>
            <field name="model">ld.training.request</field>
            <field name="arch" type="xml">
                <!-- Odoo 18 uses <list> instead of <tree> -->
                <list string="Training Requests" 
                      decoration-info="state == 'submitted'" 
                      decoration-success="state == 'done'" 
                      decoration-warning="state == 'waitlist'" 
                      decoration-muted="state == 'cancel'"
                      decoration-danger="state == 'rejected'">
                    
                    <field name="name" decoration-bf="1"/>
                    <field name="employee_id" widget="many2one_avatar_user"/>
                    <field name="course_id"/>
                    <field name="urgency" optional="show" widget="badge" 
                           decoration-danger="urgency == '2'" 
                           decoration-warning="urgency == '1'"/>
                    <field name="enrollment_status" optional="hide"/>
                    <field name="create_date" optional="hide"/>
                    <field name="state" widget="badge" 
                           decoration-success="state == 'done'"
                           decoration-info="state == 'submitted'"
                           decoration-warning="state == 'waitlist'"/>
                </list>
            </field>
        </record>

        <!-- ==================================================== -->
        <!-- 3. FORM VIEW                                         -->
        <!-- Detailed view with Workflow buttons.                 -->
        <!-- ==================================================== -->
        <record id="view_ld_training_request_form" model="ir.ui.view">
            <field name="name">ld.training.request.form</field>
            <field name="model">ld.training.request</field>
            <field name="arch" type="xml">
                <form string="Training Request">
                    <header>
                        <!-- WORKFLOW BUTTONS -->
                        
                        <!-- Submit: Only visible in Draft -->
                        <button name="action_submit" 
                                string="Submit Request" 
                                type="object" 
                                class="oe_highlight" 
                                invisible="state != 'draft'"
                                data-hotkey="v"/>

                        <!-- Approve: Visible when Submitted (Permission checked in Python) -->
                        <button name="action_manager_approve" 
                                string="Approve" 
                                type="object" 
                                class="oe_highlight btn-success" 
                                invisible="state != 'submitted'"
                                data-hotkey="q"/>

                        <!-- Reject: Visible when Submitted -->
                        <button name="action_reject" 
                                string="Reject" 
                                type="object" 
                                class="btn-danger" 
                                invisible="state != 'submitted'"
                                data-hotkey="z"/>

                        <!-- RESET TO DRAFT (New Logic) -->
                        <!-- Visible in Approved, Waitlist, Rejected, Cancel -->
                        <button name="action_reset_to_draft" 
                                string="Reset to Draft" 
                                type="object" 
                                invisible="state not in ['approved', 'waitlist', 'rejected', 'cancel']"
                                data-hotkey="r"/>

                        <!-- Cancel: Visible in Draft, Submitted, Approved (but not Done) -->
                        <button name="action_cancel" 
                                string="Cancel" 
                                type="object" 
                                invisible="state in ['done', 'cancel', 'rejected']"/>

                        <!-- Reset to Draft (Optional, for easy testing/correction) -->
                        <button name="action_submit" 
                                string="Reset to Draft" 
                                type="object" 
                                invisible="state != 'cancel'"
                                groups="ld_management.group_ld_officer"/>

                        <!-- STATUS BAR -->
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,done"/>
                    </header>
                    <sheet>
                        <!-- Banner for Rejected State -->
                        <div class="alert alert-danger mb-0" role="alert" invisible="state != 'rejected'">
                            <strong>Request Rejected.</strong> Reason: <field name="rejection_reason" readonly="1"/>
                        </div>
                        
                        <!-- Banner for Waitlist State -->
                        <div class="alert alert-warning mb-0" role="alert" invisible="state != 'waitlist'">
                            <strong>Waitlisted.</strong> Your current position is: #<field name="waitlist_position" readonly="1"/>
                        </div>

                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>

                        <group>
                            <group string="Requester Information">
                                <!-- Readonly logic handled in Python (Hybrid Approach) -->
                                <field name="employee_id" readonly="state != 'draft'"/>
                                <field name="department_id"/>
                                <field name="job_id"/>
                                <field name="line_manager_id"/>
                            </group>
                            <group string="Training Details">
                                <field name="course_id" readonly="state != 'draft'"/>
                                <field name="suggested_session_id" 
                                       readonly="state != 'draft'"
                                       domain="[('course_id', '=', course_id), ('state', '!=', 'done')]"/>
                                <field name="skill_gap_id" readonly="state != 'draft'"/>
                                <field name="urgency" widget="priority" readonly="state != 'draft'"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Justification &amp; Analysis">
                                <group>
                                    <field name="justification" 
                                           placeholder="Explain why this training is needed..." 
                                           nolabel="1"
                                           readonly="state != 'draft'"/>
                                </group>
                            </page>
                            <page string="Enrollment Info" invisible="state not in ['done', 'waitlist']">
                                <group>
                                    <field name="enrollment_id"/>
                                    <field name="enrollment_status"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <!-- CHATTER -->
                    <chatter reload_on_post="True"/>
                </form>
            </field>
        </record>

        <!-- ==================================================== -->
        <!-- 4. KANBAN VIEW                                       -->
        <!-- Visual overview for managing pipeline.               -->
        <!-- ==================================================== -->
        <record id="view_ld_training_request_kanban" model="ir.ui.view">
            <field name="name">ld.training.request.kanban</field>
            <field name="model">ld.training.request</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column" quick_create="false">
                    <field name="state"/>
                    <field name="employee_id"/>
                    <field name="course_id"/>
                    <field name="urgency"/>
                    <field name="id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="course_id"/>
                                        </strong>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <field name="name"/>
                                        </small>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown">
                                        <!-- Priority Indicator -->
                                        <field name="urgency" widget="priority"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <span class="text-muted">
                                        <field name="employee_id"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <!-- Tags or status indicators could go here -->
                                        <t t-if="record.state.raw_value == 'waitlist'">
                                            <span class="badge text-bg-warning">Waitlist</span>
                                        </t>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="employee_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ==================================================== -->
        <!-- 5. ACTIONS (Window Actions)                          -->
        <!-- Defined here to be referenced in Menus.              -->
        <!-- ==================================================== -->

        <!-- Action 1: My Requests (Learner) -->
        <record id="action_ld_my_training_requests" model="ir.actions.act_window">
            <field name="name">My Training Requests</field>
            <field name="res_model">ld.training.request</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('employee_id.user_id', '=', uid)]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first training request!
                </p>
            </field>
        </record>

        <!-- Action 2: Approval Requests (Line Manager) -->
        <!-- Note: Record Rules will ensure Managers only see their team's requests.
             We filter by 'submitted' to focus on pending tasks. -->
        <record id="action_ld_team_requests_approval" model="ir.actions.act_window">
            <field name="name">Team Requests to Approve</field>
            <field name="res_model">ld.training.request</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('state', '=', 'submitted')]</field>
            <field name="context">{'create': False}</field> <!-- Managers usually don't create here -->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No pending requests to approve.
                </p>
            </field>
        </record>

        <!-- Action 3: All Requests (L&D Officer) -->
        <record id="action_ld_all_training_requests" model="ir.actions.act_window">
            <field name="name">All Training Requests</field>
            <field name="res_model">ld.training.request</field>
            <field name="view_mode">list,kanban,form,activity</field>
            <field name="context">{'search_default_group_state': 1}</field>
        </record>

    </data>
</odoo>